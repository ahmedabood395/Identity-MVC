@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Edit Role";
}
@using (Html.BeginForm("Edit", "Role", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    <div class="form-group">
        @Html.Label("Name", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <input type="text" name="Name" value="@Model.Name" />
        </div>
    </div>
    <div class="form-group">

        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Edit Role" />
            @if (ViewBag.mess != null)
            {@ViewBag.mess}
        </div>
    </div>
}


